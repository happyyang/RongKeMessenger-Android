<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  android:layout_width="fill_parent"
			  android:background="@color/rkservice_chat_msg_file_bg"
			  android:layout_height="fill_parent"
			  android:orientation="vertical">

	<include
			android:id="@+id/layout_title"
			layout="@layout/rkservice_chat_title_layout"/>

	<TextView
			android:id="@+id/filepath"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/rkservice_chat_selectfile_filepath_bg"
			android:gravity="center_vertical"
			android:paddingLeft="15.33dp"
			android:paddingRight="15.33dp"
			android:singleLine="true"/>

	<ListView
			android:id="@+id/list"
			style="@style/rkservice_chat_ListviewStyle"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"/>

</LinearLayout>