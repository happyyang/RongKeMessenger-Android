<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:adjustViewBounds="false"
        android:background="@drawable/page_four"
        android:focusable="true"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/iv_start_weibo"
        android:layout_width="110dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/gui_immediately"
        android:layout_marginBottom="24.0dp"
        android:textStyle="bold"
        android:textSize="@dimen/setting_about_content_textsize"
        android:textColor="@color/white"
        android:background="@drawable/rkcloud_chat_btn_mms_send"
        android:focusable="true"
        />

</RelativeLayout>