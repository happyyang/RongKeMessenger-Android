<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rkcloud_chat_ui_bg_style"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/rkcloud_chat_title_layout" />

    <TextView
        android:id="@+id/filepath"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rkcloud_chat_selectfile_filepath_bg"
        android:gravity="center_vertical"
        android:paddingLeft="15.33dp"
        android:paddingRight="15.33dp"
        android:singleLine="true" />

    <ListView
        android:id="@+id/list"
        style="@style/rkcloud_chat_ListviewStyle"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>