<?xml version="1.0" encoding="utf-8"?>
<com.rongkecloud.chat.demo.ui.widget.RKCloudChatSameSizeFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/rkcloud_chat_msg_content_paddingBottom"
    android:paddingTop="@dimen/rkcloud_chat_msg_content_paddingtop" >

    <!-- 显示图片 -->

    <ImageView
        android:id="@+id/video_img"
        android:layout_width="@dimen/rkcloud_chat_msg_image_portrait_height"
        android:layout_height="@dimen/rkcloud_chat_msg_image_portrait_height"
        android:layout_gravity="center_horizontal"
        android:scaleType="fitXY"
        android:src="@drawable/rkcloud_chat_video_default" />
    <!-- 视频图标 -->

    <ImageView
        android:id="@+id/video_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_gravity="center"
        android:src="@drawable/rkcloud_chat_video_ic" />

    <LinearLayout
        android:id="@+id/video_bottomlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/rkcloud_chat_video_bottomzone_bg"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/video_filesize"
            style="@style/rkcloud_chat_MmsVideoSizeStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/video_duration"
            style="@style/rkcloud_chat_MmsVideoDurationStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</com.rongkecloud.chat.demo.ui.widget.RKCloudChatSameSizeFrameLayout>